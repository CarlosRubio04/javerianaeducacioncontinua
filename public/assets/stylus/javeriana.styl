\*----------------------------------*/
.slide
  background url(../imgs/fondo.jpg) center 0 no-repeat
  min-height 550px
  position relative
  background-attachment fixed
  &::after
  &::before
    content ''
    position absolute
  &::before
    height 60%
    left 0
    right 0
    top 0
    z-index 3
    background linear-gradient(to bottom, rgba(0, 0, 0, 0.88), rgba(0, 0, 0, 0))
  &::after
    height 400px
    left 0
    right 0
    bottom 0
    z-index 4
    background url(../imgs/borde.png) center bottom no-repeat
  .wrapper
    padding-top 133px
    position: relative
    z-index: 6
    h2
    p
      fontb() 
      margin 0
    h2
      may()
      color blanco
      font(25px)
    p
      color #d3e3f6
      font(20px)
      line-height: 24px
  +below(900px)
    .wrapper
      padding-left 10px
      padding-right 10px
  +below(700px)
    min-height 340px
    background-position -510px -190px
    &::before
      height 100%
    &::after
      display none
    .wrapper
      padding 120px 10px 0 10px
      h2
        margin-bottom 10px
        font(17px)
      p
        font(13px)
        
      



