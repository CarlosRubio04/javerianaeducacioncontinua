\*------------------------------------*/
@import 'normalize.styl'


/*----------------------------------*\
    $FONT-ICONS
\*----------------------------------*/
@import 'fuentes.styl'



/*------------------------------------*\
    $NIB & JEET
\*------------------------------------*/
@import "nib"
@import 'jeet'




/*------------------------------------*\
    $VARIABLES
\*------------------------------------*/
azul   = #0a629f
verde  = #52af83
negro  = #333333
blanco = #fff
vendor-prefixes = webkit o ms moz official





/*----------------------------------*\
    $MIXINS
\*----------------------------------*/
trans(segun)
  transition segun

cursiva()
  font-style italic

clear()
  content ''
  clear both
  block()

may()
  text-transform uppercase

sub()
  text-decoration underline

bold()
  font-weight bold
  
relative()
  position relative

absolute()
  position absolute
  
fixed()
  position fixed

block()
  display block

none()
  display none

centrar()
  margin 0 auto
  block()

alinear()
   display inline-block
   vertical-align top
   zoom 1

fontr()
  font-family 'droid_sansregular'

fontb() 
  font-family 'droid_sansbold'

  

font(valor)
  font-size valor
  
txtalign(txtvalor)
  text-align txtvalor

box()
  box-sizing border-box  

left2()
  float left

right2()
  float right

over()
  overflow hidden  







/*----------------------------------*\
    $CLASES GLOBALES
\*----------------------------------*/
body
  fontr()
  font(14px)
  color negro



.clear
  clear both
 

.relative
  position relative

.padding 
  padding-left 0.9375em
  padding-right 0.9375em

.box
  box()
  
.wrapper
  max-width 1000px
  width 100%
  box()
  margin 0 auto
  


.checkbox input[type=checkbox]:checked+label::after
.checkbox input[type=radio]:checked+label::after
  background url(../imgs/checkbox.png) center center no-repeat verde


.checkbox 
  input[type=checkbox]
  input[type=radio]
    display none
    visibility hidden
  label
    padding 3px 0 3px 25px
    position relative
    cursor pointer
    line-height 21px
    font(11px)
    b
      color negro
    a
      color negro
      &:hover
        text-decoration underline
  label::after
    content ''
    width 13px
    height 13px
    border 1px solid #7f7f7f
    position absolute
    left 0
    top 2px
    transition all 400ms
    cursor pointer



.select
  position relative
  box()
  select
    position absolute
    z-index 999
    height 42px
    opacity 0
    cursor pointer
    width 100%
    color negro
    box()
    padding-right 30px
    -webkit-appearance none
    > option:hover
      color #1B517E
      cursor pointer
  .arrow
    background #ffffff
    border 1px solid #cccccc
    text-shadow 0 1px 0 #fff
    position relative
    height 42px
    color #333
    border-radius 10px
    box()
    padding 0 15px
    line-height 42px
    font-weight bold
    &::after
      content ''
      position absolute
      right 10px
      border-top 6px solid #cccccc
      border-right 6px solid transparent
      border-left 6px solid transparent
      top 18px
    &::before
      width 1px
      height 100%
      background #ccc
      position absolute
      right 30px
      top 0
      content ''
      

.flex
  height 0
  margin-bottom 0.88889rem
  overflow hidden
  padding-bottom 67.5%
  padding-top 1.38889rem
  position relative
  iframe
  object
  embed
  video
    height 100%
    position absolute
    top 0
    width 100%
    left 0
    
.cont-img
  margin-bottom 15px
  img
    width 100%
    height auto










/*----------------------------------*\
    $HEADER
\*----------------------------------*/
header
  position fixed
  left 0
  right 0
  top 0
  z-index 99
  padding 10px 0
  transform translateY(0%)
  transition all 0.5s
  box()
  .wrapper
    padding 10px
  h1
    float left
    img
      trans(.3s)
  .tel
    float right
    a
      color blanco
      background url(../imgs/icono.png) 0 center no-repeat
      padding: 5px 0 5px 50px
      margin: 10px 0 0px 0
      block()
    small
    span
      block()
      text-align right
      line-height: 24px
      trans .3s
      may()
    small
      font(15px)
      fontb() 
    span
      font(26px)
  +below(700px)
    .wrapper
      padding 0 10px
    .tel
      a
        width 30px
        height 30px
        padding 0
        background-size 30px
        top 5px
        position relative
      small
      span
        display none
    h1
      width 200px
      img
        width 100%
        height auto
        

.header-hide
  transform translateY(-100%)
  height 74px

.header-show
  transform translateY(0%)
  background negro
  height 70px
  .wrapper
    padding 0 10px
  h1
    img
      width auto
      height 50px
  .tel
    a
      padding 0px 0 0 50px
      margin 0
      small
        font(10px)
        line-height 20px
      span
        font(14px)    
  +below(700px)
    .tel
      a
        width 30px
        height 30px
        padding 0
        background-size 30px
        position relative
        top 10px
        small
        span
          display none








